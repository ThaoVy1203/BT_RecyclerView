<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <!-- Nút Back -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnBackCard"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        android:backgroundTint="#80FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="Quay lại"
            app:tint="#FFFFFF" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Ảnh Album -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/albumCard"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:id="@+id/imgSongDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/song1"
            android:contentDescription="Ảnh bài hát" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Thông tin bài hát -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:backgroundTint="#E6FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/albumCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Tên bài hát -->
            <TextView
                android:id="@+id/txtSongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên bài hát"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center" />

            <!-- Tên ca sĩ -->
            <TextView
                android:id="@+id/txtSongArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ca sĩ"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif" />

            <!-- Thanh tiến trình -->
            <com.google.android.material.slider.Slider
                android:id="@+id/songProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:valueFrom="0"
                android:valueTo="100"
                app:thumbColor="#FF6B35"
                app:trackColorActive="#FF6B35"
                app:trackColorInactive="#E0E0E0" />

            <!-- Các nút điều khiển -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPrevious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_previous"
                    android:contentDescription="Bài trước"
                    app:fabSize="mini"
                    app:backgroundTint="#FFFFFF"
                    app:tint="#FF6B35"
                    app:elevation="8dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_play"
                    android:contentDescription="Phát hoặc tạm dừng"
                    app:fabSize="normal"
                    app:backgroundTint="#FF6B35"
                    app:tint="#FFFFFF"
                    app:elevation="12dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next"
                    android:contentDescription="Bài kế tiếp"
                    app:fabSize="mini"
                    app:backgroundTint="#FFFFFF"
                    app:tint="#FF6B35"
                    app:elevation="8dp" />
            </LinearLayout>

            <!-- Các nút phụ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <ImageButton
                    android:id="@+id/btnShuffle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_shuffle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Phát ngẫu nhiên"
                    app:tint="#999999" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_favorite"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Yêu thích"
                    app:tint="#FF6B35" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btnRepeat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_repeat"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Lặp lại bài hát"
                    app:tint="#999999" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
